@model IEnumerable<trackingentradaGrupoHumano.Models.tblocalidad>

@{
    ViewBag.Title = "Index";
}

<h2>Consulta de localidades</h2>

<p>
    @Html.ActionLink("Crear nueva localidad", "Create",null, new { @class = "btn btn-info" })
</p>
<br />

<div class="panel panel-default">
    <div class="panel-heading">

        <label for="filtro">Filtrar: (Código o descripción de la localidad)</label>
        <input type="text" id="filtro" class="form-control">
        <div class="pull-right">
            <div class="form-inline">
                <div class="form-group">

                </div>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="userTable">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>

                        @Html.ActionLink("Modificar", "Edit", new { id = item.id }, new { @class = "btn btn-info" }) 
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#filtro').keyup(function () {
                var filtro = $(this).val().toLowerCase();
                $('#userTable tbody tr').hide();
                $('#userTable tbody tr').each(function () {
                    var rowCodigo = $(this).find('td:eq(0)').text().toLowerCase(); // Índice para el código de empleado
                    var rowNombre = $(this).find('td:eq(1)').text().toLowerCase(); // Índice para el nombre
                    if (rowCodigo.includes(filtro) || rowNombre.includes(filtro)) {
                        $(this).show();
                    }
                });
            });
        });
    </script>
}
