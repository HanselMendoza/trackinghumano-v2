@model IEnumerable<trackingentradaGrupoHumano.Models.TBENTRADA>

@{
    ViewBag.Title = "Index";
}

<h2>Solicitud de entradas</h2>

<p>
    @Html.ActionLink("Crear nueva solicitud", "Create", null, new { @class = "btn btn-info" })
</p>

<div class="panel panel-default">

    <div class="panel-heading">Solicitud de entradas</div>

    <div class="panel panel-default">
        <div class="panel-heading" style="display: flex; align-items: center;">
            <label for="filtro" style="margin-right: 10px;">Filtrar por fecha:</label>
            <input type="date" id="filtro" class="form-control" style="margin-right: 10px;">

            <label for="filtro2" style="margin-right: 10px;">Filtrar por cédula del visitante o localidad:</label>
            <input type="text" id="filtro2" class="form-control" style="margin-right: 10px;">

            <div class="pull-right">
                <div class="form-inline">
                    <div class="form-group">
                    </div>
                </div>
            </div>
            <p>
                @Html.ActionLink("Eliminar filtros", "index", null, new { @class = "btn btn-info" })
            </p>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered" id="userTable">
                <thead>
                    <tr>
                        <!-- Encabezados de la tabla -->
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.CEDULA)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.NOMBRES)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.APELLIDOS)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.FECHAENTRADA)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.TiempoESTIMADO)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.codigoempleado)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.NombreAnfitrion)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.telefono)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.HORAENTRADA)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.HORASALIDA)</th>
                        <th style="padding: 30px; white-space: nowrap;">¿Accedió?</th>
                        <th style="padding: 30px; white-space: nowrap;">¿Cita Previa?</th>
                        <th style="padding: 30px; white-space: nowrap;">¿Visita Presidencial?</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.TBDEPARTAMENTO.NOMBRE)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.TBMOTIVOENTRADA.DESCRIPCION)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.TBOCUPACION.NOMBRE)</th>
                        <th style="padding: 30px; white-space: nowrap;">@Html.DisplayNameFor(model => model.tblocalidad.descripcion)</th>


                        <th style="padding: 30px; white-space: nowrap;">Piso a visitar</th>
                        <th style="padding: 30px; white-space: nowrap;">Estado de la solicitud</th>
                        <th style="padding: 30px; white-space: nowrap;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Contenido de la tabla -->
                    @foreach (var item in Model)
                    {
                    <tr>
                        <!-- Datos de cada fila -->
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.CEDULA)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.NOMBRES)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.APELLIDOS)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.FECHAENTRADA)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.TiempoESTIMADO)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.codigoempleado)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.NombreAnfitrion)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.telefono_2)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.HORAENTRADA)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.HORASALIDA)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.CONFIGURACION.DESCRIPCION)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.CONFIGURACION1.DESCRIPCION)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.CONFIGURACION2.DESCRIPCION)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.TBDEPARTAMENTO.NOMBRE)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.TBMOTIVOENTRADA.DESCRIPCION)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.TBOCUPACION.NOMBRE)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.tblocalidad.descripcion)</td>


                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.TBPISO.NOMBRE)</td>
                        <td style="padding: 30px; white-space: nowrap;">@Html.DisplayFor(modelItem => item.estado.descripcion)</td>
                        <td style="padding: 30px; white-space: nowrap;">
                            @Html.ActionLink("Editar", "Edit", new { id = item.IDENTRADA }, new { @class = "btn btn-info" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#filtro').change(function () {
                var filtro = $(this).val(); // Obtener la fecha del input
                $('#userTable tbody tr').hide();
                $('#userTable tbody tr').each(function () {
                    var rowFecha = $(this).find('td:eq(3)').text(); // Índice para la fecha de entrada
                    // Formatear la fecha de la tabla para que coincida con el formato del input date
                    var formattedRowFecha = new Date(rowFecha).toISOString().split('T')[0];

                    if (formattedRowFecha === filtro) {
                        $(this).show();
                    }
                });
            });
        });

        $(document).ready(function () {
            $('#filtro2').keyup(function () {
                var filtro = $(this).val().toLowerCase();
                $('#userTable tbody tr').hide();
                $('#userTable tbody tr').each(function () {
                    var rowCodigo = $(this).find('td:eq(15)').text().toLowerCase(); // Índice para el código de empleado
                    var rowcedula = $(this).find('td:eq(0)').text().toLowerCase(); // Índice para el código de empleado
                    if (rowCodigo.includes(filtro) || rowcedula.includes(filtro)) {
                        $(this).show();
                    }
                });
            });
        });
    </script>
}
