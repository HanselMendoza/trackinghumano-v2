            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.codigoempleado,"Código empleado del Anfitrión" ,htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.codigoempleado, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.codigoempleado, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NombreAnfitrion,"Nombre del anfritrioón", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.NombreAnfitrion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombreAnfitrion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear solicitud de entrada" class="btn btn-success" />
            </div>
        </div>
    </div>
}

