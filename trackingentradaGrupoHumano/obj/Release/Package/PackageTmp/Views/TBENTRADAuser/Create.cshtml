@model trackingentradaGrupoHumano.Models.TBENTRADA

@{
    ViewBag.Title = "Create";
}

<h2>Crear solicitud de entrada</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4>El proceso de solicitud se debe solicitar 12 horas antes del invitado acceder a nuestras instalaciones.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.IDDEPART, "Departamento", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("IDDEPART", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDDEPART, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IDOCUPACION, "Ocupación", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("IDOCUPACION", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDOCUPACION, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IDMOTIVOENTRADA, "Motivo de entrada", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("IDMOTIVOENTRADA", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDMOTIVOENTRADA, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.CEDULA,"cedula:", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.CEDULA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CEDULA, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NOMBRES, "Nombre del visitante:",htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.NOMBRES, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOMBRES, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.APELLIDOS,"Apellido del visitante:", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.APELLIDOS, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.APELLIDOS, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.FECHAENTRADA,"Fecha de entrada:",htmlAttributes: new { @class = "control-label" })
                    <input type="date" class="form-control" id="FECHAENTRADA" name="FECHAENTRADA">
                    @Html.ValidationMessageFor(model => model.FECHAENTRADA, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TiempoESTIMADO,"Tiempo estimado" ,htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.TiempoESTIMADO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TiempoESTIMADO, "", new { @class = "text-danger" })
                </div>

                
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Localidad, "Localidad", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("Localidad", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Localidad, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.HORAENTRADA, "Hora de entrada", htmlAttributes: new { @class = "control-label" })
                    <input type="time" class="form-control" id="Horaentrada" name="Horaentrada">
                    @Html.ValidationMessageFor(model => model.HORAENTRADA, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.PISO, "Nivel", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("PISO", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PISO, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.COORDENADA, "Ubicación", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("COORDENADA", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.COORDENADA, "", new { @class = "text-danger" })
