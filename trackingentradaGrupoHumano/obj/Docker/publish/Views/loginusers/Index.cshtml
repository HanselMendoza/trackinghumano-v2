@model IEnumerable<trackingentradaGrupoHumano.Models.loginuser>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de usuarios</h2>
<div class="form-group">
    <p>
        @Html.ActionLink("Crear nuevo usuario", "Create", null, new { @class = "btn btn-info" })
    </p>
</div>
<br />
<div class="panel panel-default">
    <div class="panel-heading">
      
        <label for="filtro">Filtrar: (Código o nombre de empleado)</label>
        <input type="text" id="filtro" class="form-control">
        <div class="pull-right">
            <div class="form-inline">
                <div class="form-group">

                </div>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="userTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.codigoempleado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.apellido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.email)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.codigoempleado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        <center>
                            @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Eliminar", "delete", new { id = item.id }, new { @class = "btn btn-danger" })
                        </center>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#filtro').keyup(function () {
                var filtro = $(this).val().toLowerCase();
                $('#userTable tbody tr').hide();
                $('#userTable tbody tr').each(function () {
                    var rowCodigo = $(this).find('td:eq(0)').text().toLowerCase(); // Índice para el código de empleado
                    var rowNombre = $(this).find('td:eq(1)').text().toLowerCase(); // Índice para el nombre
                    if (rowCodigo.includes(filtro) || rowNombre.includes(filtro)) {
                        $(this).show();
                    }
                });
            });
        });
    </script>
}
